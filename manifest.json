{
    "name": "Secure Toolbar Extension",
    "version": "1.0",
    "description": "Secure Toolbar Extension",
    "options_page": "options/options.html",
    "permissions": [
      "activeTab", 
      "storage",
      "tabs",
      "https://safebrowsing.googleapis.com/v4/threatMatches:find"
    ],
    "background": {
      "scripts": [
        "lib/axios.min.js",
        "logger.js",
        "alert.js",
        "checks/checkHTTPS.js",
        "checks/checkGoogleAPI.js",
        "background.js"
      ],
      "persistent": false
    },
    "manifest_version": 2
}
